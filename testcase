from sqlalchemy import create_engine
from sqlalchemy.exc import SQLAlchemyError

# Replace with your MySQL server connection details
MYSQL_SERVER_URI = 'mysql+mysqlconnector://myuser:mypassword@localhost'

# Create MySQL engine
engine = create_engine(MYSQL_SERVER_URI)

# Database name
DATABASE_NAME = 'temple_inscriptions'

# Create the database
try:
    with engine.connect() as connection:
        connection.execute(f"CREATE DATABASE IF NOT EXISTS {DATABASE_NAME}")
    print(f"Database '{DATABASE_NAME}' created or already exists.")
except SQLAlchemyError as e:
    print(f"Error creating database: {e}")

